[ // VIEW
  {
    "key": "ctrl+space ctrl+b",
    "command": "workbench.action.togglePanel",
    "when": "vim.active && vim.mode != 'Insert'"
  },
  {
    "key": "ctrl+j",
    "command": "-workbench.action.togglePanel"
  },
  {
    "key": "ctrl+space ctrl+e",
    "command": "workbench.action.toggleAuxiliaryBar",
    "when": "vim.active && vim.mode != 'Insert'"
  },
  {
    "key": "ctrl+alt+b",
    "command": "-workbench.action.toggleAuxiliaryBar"
  },
  {
    "key": "ctrl+space ctrl+z",
    "command": "workbench.action.toggleZenMode",
    "when": "vim.active && !isAuxiliaryWindowFocusedContext && vim.mode != 'Insert'"
  },
  {
    "key": "ctrl+k z",
    "command": "-workbench.action.toggleZenMode",
    "when": "!isAuxiliaryWindowFocusedContext"
  },
  {
    "key": "ctrl+space ctrl+x",
    "command": "workbench.view.extensions",
    "when": "viewContainer.workbench.view.extensions.enabled && vim.active && vim.mode != 'Insert'"
  },
  {
    "key": "ctrl+shift+x",
    "command": "-workbench.view.extensions",
    "when": "viewContainer.workbench.view.extensions.enabled"
  },
  {
    "key": "ctrl+space ctrl+w",
    "command": "workbench.actions.view.problems",
    "when": "vim.active && workbench.panel.markers.view.active && vim.mode != 'Insert'"
  },
  {
    "key": "ctrl+shift+m",
    "command": "-workbench.actions.view.problems",
    "when": "workbench.panel.markers.view.active"
  },
  {
    "key": "ctrl+space ctrl+f",
    "command": "workbench.view.search",
    "when": "vim.active && vim.mode != 'Insert'"
  },
  {
    "key": "ctrl+shift+f",
    "command": "-workbench.view.search",
    "when": "workbench.view.search.active && neverMatch =~ /doesNotMatch/"
  },
  {
    "key": "ctrl+space ctrl+l",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "vim.active && vim.mode != 'Insert'"
  },
  {
    "key": "ctrl+b",
    "command": "-workbench.action.toggleSidebarVisibility"
  },
  // FOCUS
  {
    "key": "alt+c",
    "command": "workbench.action.focusFirstEditorGroup"
  },
  {
    "key": "ctrl+1",
    "command": "-workbench.action.focusFirstEditorGroup"
  },
  {
    "key": "alt+h",
    "command": "workbench.action.focusLeftGroup",
    "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
  },
  {
    "key": "alt+l",
    "command": "workbench.action.focusRightGroup",
    "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
  },
  {
    "key": "alt+k",
    "command": "workbench.action.focusAboveGroup",
    "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
  },
  {
    "key": "alt+j",
    "command": "workbench.action.focusBelowGroup",
    "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
  },
  {
    "key": "alt+e",
    "command": "workbench.action.focusAuxiliaryBar"
  },
  {
    "key": "alt+g",
    "command": "workbench.view.scm",
    "when": "workbench.scm.active"
  },
  {
    "key": "ctrl+shift+g",
    "command": "-workbench.view.scm",
    "when": "workbench.scm.active"
  },
  {
    "key": "alt+t",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  {
    "key": "ctrl+oem_3",
    "command": "-workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  // SPLIT EDITOR
  {
    "key": "ctrl+h",
    "command": "workbench.action.splitEditorRight"
  },
  {
    "key": "ctrl+k ctrl+oem_5",
    "command": "-workbench.action.splitEditorRight"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.splitEditorLeft"
  },
  {
    "key": "ctrl+k ctrl+oem_5",
    "command": "-workbench.action.splitEditorLeft"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.splitEditorDown"
  },
  {
    "key": "ctrl+k ctrl+oem_5",
    "command": "-workbench.action.splitEditorDown"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.splitEditorUp"
  },
  {
    "key": "ctrl+k ctrl+oem_5",
    "command": "-workbench.action.splitEditorUp"
  },
  // OPEN CLOSE
  {
    "key": "ctrl+t",
    "command": "-workbench.action.showAllSymbols"
  },
  {
    "key": "ctrl+t",
    "command": "welcome.showNewFileEntries"
  },
  {
    "key": "ctrl+alt+win+n",
    "command": "-welcome.showNewFileEntries"
  },
  // OPEN SETTINGS JSON 
  {
    "key": "ctrl+oem_comma",
    "command": "workbench.action.openSettingsJson"
  },
  {
    "key": "ctrl+oem_comma",
    "command": "-workbench.action.openSettings"
  }
]